<h2>New Kata</h2>

<%= error_messages_for :kata %>

<% form_for @kata do |f| %>
  <%= f.label :title %><br/>
  <%= f.text_field :title %><br/>
  <br/>
  <%= f.label :language %><br/>
  <%= f.text_field :language %><br/>
  <br/>
  <%= f.label :description %><br/>
  <%= f.text_area :description, :rows => 10 %><br/>
  <br/>
  <%= f.submit 'Add' %>
<% end %>

<%= link_to 'Back', katas_path %>
