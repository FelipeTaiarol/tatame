<h1>Tatame</h1>

<div id="next">
	<% if @dojo != nil %>
		<span id="date"><%=h show_date(@dojo.date) %></span>
		<span id="comment"><%=h @dojo.comment %></span>
		<span id="delete"><%= link_to 'delete', @dojo, :confirm => 'Are you sure?', :method => :delete, :id => "delete_next" %></span>
		<ul>
		</ul>
	<% else %>
		No scheduled dojos
	<% end %>
</div>

<div id="schedule">
	<ol>
		<% i = 1 %>
		<% for dojo in @dojos %>
				<li>
					<span id="date"><%=h show_date(dojo.date) %></span>
					<span id="delete"><%= link_to 'delete', dojo, :confirm => 'Are you sure?', :method => :delete, :id => "delete_#{i.ordinalize}" %></span>
				</li>
				<% i = i + 1 %>
		<% end %>
	</ol>
</div>

