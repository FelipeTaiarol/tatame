<%= error_messages_for :dojo %>
<h2>New Dojo</h2>

<% form_for :dojo, @dojo, :url => { :action => "create" } do |f| %>
	<%= label(:dojo, :date) %><br/>
	<%= datetime_select("dojo", "date", :minute_step => 15) %><br/>
	<br/>
	<%= label(:dojo, :comment) %><br/>
	<%= f.text_area :comment, :rows => 10 %><br/>
	<br/>
	<%= submit_tag 'Create' %>
<% end %>

<%= link_to 'Back', root_path %>